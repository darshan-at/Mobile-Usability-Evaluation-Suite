<!DOCTYPE html>
<html>

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/record.css">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- bootstrap script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Video JS CCSS -->
    <link href="https://unpkg.com/video.js@7.14.3/dist/video-js.min.css" rel="stylesheet">
    <link href="https://unpkg.com/videojs-record/dist/css/videojs.record.min.css" rel="stylesheet">
    <!-- Video JS Script -->
    <script src="https://unpkg.com/video.js@7.14.3/dist/video.min.js"></script>
    <script src="https://unpkg.com/recordrtc/RecordRTC.js"></script>
    <script src="https://unpkg.com/webrtc-adapter/out/adapter.js"></script>

    <script src="https://unpkg.com/videojs-record/dist/videojs.record.min.js"></script>

</head>

<body>

    <nav>
        <div class="topnav" class="row">
            <a href="/">Home</a>
            <a href="/participants">Participants</a>
            <!-- <a href="/review">Review</a> -->
        </div>
    </nav>
    <div class="container-fluid">

        <div style="padding-left:16px; text-align: center;" class="row">
            <p id="heading2">Record Task</p>

            <section id="video" class="col-sm-6">
                <video id="myVideo" class="video-js">

                </video>
            </section>
            <aside id="notes" class="col-sm-6">
                <div id="details">
                    <h2 style="font-weight:bold">Participant Details</h2>
                    <h3>Name: <span id="participant_name" style="font-weight:bold"><%= participant_name %></span> </h3>
                    <h3>Task: <span style="font-weight:bold"><%= task_name %></span></h3>
                </div>
                <button class="button" id="start-record" value="<%= task_id %> ">Start Recording</button>
                <button class="button" id="stop-record" value="<%= obj_id %> ">Stop Recording</button>

            </aside>
        </div>
    </div>

    <script src="/script/record.js"></script>
</body>

</html>